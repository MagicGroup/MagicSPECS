+  std::ifstream in;
+  in.open(_fileName.c_str() );
+  if(not in)
+  {
+    GTL_DEBUG( "Impossible to open file " << _fileName );
+    return;
+  }
+  std::string str;
+  std::getline(in,str);
+  while ( in ) {
+    source += str;
+    source += "\n";
+    std::getline(in,str);
+  }
+  setSource(source);
