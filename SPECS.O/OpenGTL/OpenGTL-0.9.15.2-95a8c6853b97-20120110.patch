+  struct CombinedOperation {
+    CombinedOperation(const _T1_& op1, const _T2_& op2) : m_op1(op1), m_op2(op2)
+    {
+    }
+    inline _TOutput_ operator()(_TInput_ v) const
+    {
+      return m_op2(m_op1(v));
+    }
+  private:
+    _T1_ m_op1;
+    _T2_ m_op2;
+  };
