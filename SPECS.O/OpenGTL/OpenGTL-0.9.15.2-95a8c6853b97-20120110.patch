+template<typename _FunctionT_, typename _OutputT_, typename _InputT_, typename _LutKeyT_ >
+class BaseLut {
+  private:
+    /**
+     * Initialization of the table.
+     */
+    inline void init()
+    {
+      int size = m_key.size();
+      m_table = new _OutputT_[size];
+      for(int i = 0; i < size; ++i)
