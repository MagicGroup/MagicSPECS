+#define CHECK_ELEMENTS_SIZE_EQUAL(_n) \
+  if(elements.size() != _n) \
+  { \
+    std::cerr << line << ": invalid number of elements for '" << elements[0] << "'" << std::endl; \
+    return false; \
+  }
