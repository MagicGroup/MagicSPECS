+  CanvasWrap cw;
+  cw.canvas = _canvas;
+  cw.count = 1;
+  PaletteWrap pw;
+  pw.data = _palette;
+  pw.count = 1;
+  
+  const std::list<GTLCore::Function*>* drawFuncs = GTLFragment::Library::d->m_moduleData->function( name(), "draw");
