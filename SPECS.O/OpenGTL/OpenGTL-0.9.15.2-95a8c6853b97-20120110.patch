+
+LibrariesManager::~LibrariesManager()
+{
+  for(std::map<GTLCore::String, Library*>::iterator it = d->libraries.begin();
+      it != d->libraries.end(); ++it)
+  {
+    delete it->second;
+  }
+  delete d;
