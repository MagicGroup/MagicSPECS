+{
+  GTL_ASSERT(_channelsNb == -1);
+  std::map<GTLCore::String, Library*>::iterator it = d->libraries.find(name);
+  if( it == d->libraries.end())
+  {
+    return 0;
+  }
+  return it->second;
+}
+
