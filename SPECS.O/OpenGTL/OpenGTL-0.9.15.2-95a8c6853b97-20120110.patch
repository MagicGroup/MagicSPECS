+  if(d->loadRijnWrapperLibrary)
+  {
+    GTLFragment::Library* library = OpenRijn::LibrariesManager::instance()->loadLibrary( "rijnwrappers", -1);
+    GTL_ASSERT( library );
+    if(not library->isCompiled())
+    {
