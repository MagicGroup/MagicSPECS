# default: off
# description: The IMAP service allows remote users to access their mail using \
#              an IMAP client such as Mutt, Pine, fetchmail, or Netscape \
#              Communicator.
service imap
{
	socket_type		= stream
	wait			= no
	user			= root
	server			= /usr/sbin/imapd
	log_on_success	+= HOST DURATION
	log_on_failure	+= HOST
	disable			= yes
}
