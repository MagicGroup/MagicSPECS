+LONGSTRDEF* find_longstrdef(LONGSTRDEF * head, int nr, char * longname, char ** out_longname)
+{
+	char *p, c;
+	LONGSTRDEF *de;
+	
+	p = longname;
+	while (p && !isspace(*p)) p++;
+	c = *p;
+	*p = 0;
+
+	de = head;
+	while (de && (de->nr != nr || (de->longname && strcmp(longname, de->longname))))
+		de = de->next;
+
+	if (out_longname)
+		*out_longname = de ? de->longname : xstrdup(longname);
+	*p = c;
+	return de;
+}
