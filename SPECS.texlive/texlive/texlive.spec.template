rm -rf %{buildroot}%{_texdir}/texmf-dist/doc/info/dir

mkdir -p %{buildroot}%{_bindir}
mv %{buildroot}/bin/i386-linux/* %{buildroot}%{_bindir}
for i in `find %{buildroot}%{_bindir} -type f`; do
       [ "`file $i | grep ELF | wc -l`" == "1" ] && rm -f $i
done
