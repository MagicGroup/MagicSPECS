rm -f context
cat > context << EOF
\#!/bin/sh
export TEXMF=/usr/share/texlive/texmf-dist;
export TEXMFCNF=/usr/share/texlive/texmf-dist/web2c;
export TEXMFCACHE=/var/lib/texmf;
%{_bindir}/mtxrun --script context "\\$@"
EOF
